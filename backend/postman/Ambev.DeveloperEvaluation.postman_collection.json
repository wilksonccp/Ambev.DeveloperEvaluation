{
  "info": {
    "name": "Ambev Developer Evaluation API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for Auth and Sales endpoints"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Authenticate (Get JWT)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@local\",\n  \"password\": \"Admin@123\"\n}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "const token = json && json.data ? json.data.token : null;",
                  "if (token) { pm.collectionVariables.set('token', token); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Sales",
      "auth": { "type": "bearer", "bearer": [{ "key": "token", "value": "{{token}}", "type": "string" }] },
      "item": [
        {
          "name": "Create Sale",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "url": { "raw": "{{baseUrl}}/api/sales", "host": ["{{baseUrl}}"], "path": ["api","sales"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"{{$guid}}\",\n  \"number\": \"S-{{$randomInt}}\",\n  \"customerId\": \"{{$guid}}\",\n  \"customerName\": \"ACME\",\n  \"branchId\": \"{{$guid}}\",\n  \"branchName\": \"SP\",\n  \"items\": [\n    {\n      \"productId\": \"{{$guid}}\",\n      \"productName\": \"Beer\",\n      \"unitPrice\": 10.0,\n      \"quantity\": 5\n    }\n  ]\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.data) { pm.collectionVariables.set('saleId', json.data.id); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get Sale",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/api/sales/{{saleId}}", "host": ["{{baseUrl}}"], "path": ["api","sales","{{saleId}}"] }
          }
        },
        {
          "name": "List Sales",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/sales?page=1&size=10&order=-createdAt",
              "host": ["{{baseUrl}}"],
              "path": ["api","sales"],
              "query": [
                {"key":"page","value":"1"},
                {"key":"size","value":"10"},
                {"key":"order","value":"-createdAt"}
              ]
            }
          }
        },
        {
          "name": "Add Item",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "url": { "raw": "{{baseUrl}}/api/sales/{{saleId}}/items", "host": ["{{baseUrl}}"], "path": ["api","sales","{{saleId}}","items"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"{{$guid}}\",\n  \"productName\": \"Soda\",\n  \"unitPrice\": 8.5,\n  \"quantity\": 2\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.data && json.data.items && json.data.items.length) { pm.collectionVariables.set('productId', json.data.items[json.data.items.length-1].productId); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Update Item Quantity",
          "request": {
            "method": "PATCH",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "url": { "raw": "{{baseUrl}}/api/sales/{{saleId}}/items/{{productId}}", "host": ["{{baseUrl}}"], "path": ["api","sales","{{saleId}}","items","{{productId}}"] },
            "body": { "mode": "raw", "raw": "{\n  \"quantity\": 7\n}" }
          }
        },
        {
          "name": "Remove Item Quantity",
          "request": {
            "method": "DELETE",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "url": { "raw": "{{baseUrl}}/api/sales/{{saleId}}/items/{{productId}}", "host": ["{{baseUrl}}"], "path": ["api","sales","{{saleId}}","items","{{productId}}"] },
            "body": { "mode": "raw", "raw": "{\n  \"quantity\": 1\n}" }
          }
        },
        {
          "name": "Cancel Items",
          "request": {
            "method": "POST",
            "url": { "raw": "{{baseUrl}}/api/sales/{{saleId}}:cancel-items", "host": ["{{baseUrl}}"], "path": ["api","sales","{{saleId}}:cancel-items"] }
          }
        },
        {
          "name": "Cancel Sale",
          "request": {
            "method": "POST",
            "url": { "raw": "{{baseUrl}}/api/sales/{{saleId}}:cancel", "host": ["{{baseUrl}}"], "path": ["api","sales","{{saleId}}:cancel"] }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "token", "value": "" },
    { "key": "saleId", "value": "" },
    { "key": "productId", "value": "" }
  ]
}

